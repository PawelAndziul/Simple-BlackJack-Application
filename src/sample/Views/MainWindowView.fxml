<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>


<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.MainWindowController">
   <children>
      <BorderPane maxHeight="400.0" maxWidth="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: green;" stylesheets="@../Resources/mainCSS.css">
          <top>
              <HBox fx:id="dealerCardContainer" alignment="CENTER" spacing="10.0" style="-fx-background-color: darkgreen;" BorderPane.alignment="CENTER">
                  <BorderPane.margin>
                      <Insets bottom="5.0" top="5.0" />
                  </BorderPane.margin>
              </HBox>
          </top>
          <center>
              <HBox fx:id="playerCardContainer" alignment="BOTTOM_CENTER" spacing="10.0" style="-fx-background-color: darkgreen;" BorderPane.alignment="CENTER">
                  <padding>
                      <Insets bottom="10.0" />
                  </padding>
              </HBox>
          </center>
          <bottom>
              <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                  <children>
                  <Button mnemonicParsing="false" onAction="#startNewGameButtonClicked" text="Start New Game" />
                      <Button fx:id="buttonHit" mnemonicParsing="false" onAction="#pickCardButtonClicked" prefWidth="100.0" text="Hit" />
                      <Button fx:id="buttonStand" mnemonicParsing="false" onAction="#standButtonClicked" prefWidth="100.0" text="Stand" />
                  </children>
                  <BorderPane.margin>
                      <Insets bottom="15.0" top="15.0" />
                  </BorderPane.margin>
              </HBox>
          </bottom>
      </BorderPane>
      <BorderPane fx:id="resultMessagePane" onMouseClicked="#resultMessagePaneClicked" prefHeight="400.0" prefWidth="600.0" styleClass="pane-result" stylesheets="@../Resources/mainCSS.css">
         <bottom>
            <Pane prefHeight="150.0" prefWidth="200.0" styleClass="pane-result-cover" stylesheets="@../Resources/mainCSS.css" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <Pane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="resultLabel" alignment="CENTER" prefHeight="100.0" prefWidth="600.0" styleClass="message-game-result" stylesheets="@../Resources/mainCSS.css" text="Result" />
               </children>
            </Pane>
         </center>
         <top>
            <Pane prefHeight="150.0" prefWidth="200.0" styleClass="pane-result-cover" stylesheets="@../Resources/mainCSS.css" BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </children>
</Pane>
